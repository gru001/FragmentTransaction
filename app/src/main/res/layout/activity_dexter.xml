<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.transaction.DexterActivity">
    <Button
        android:text="Change (don't allow state loss)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disallow_state_loss"/>

    <Button
        android:text="Change (allow state loss)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allow_state_loss"/>
    <Button
        android:text="Change (no state loss)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_state_loss"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:text="Test commit(), commitNow()"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:id="@+id/commit_now_and_other"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <TextView
        android:id="@+id/lbl_stack_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


</LinearLayout>